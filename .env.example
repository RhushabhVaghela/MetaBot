# MegaBot Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://megabot:your_secure_postgres_password_here@postgres:5432/megabot

# =============================================================================
# Ollama Configuration
# =============================================================================
OLLAMA_MODEL=qwen2.5:14b
# Alternative models: llama2, mistral, codellama, phi3
OLLAMA_HOST=http://ollama:11434

# =============================================================================
# memU Configuration
# =============================================================================
MEMU_REPO_PATH=./external/memU
MEMU_PROACTIVE_MODE=true
# Set to false to disable proactive memory features

# =============================================================================
# OpenClaw Configuration
# =============================================================================
OPENCLAW_REPO_PATH=./external/openclaw
# Required for OpenClaw adapter authentication (Used in core/config.py validate_environment)
OPENCLAW_AUTH_TOKEN=your_secret_openclaw_token_12345

# Optional but recommended for Anthropic Computer Use
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_POLICY=prompt
# Options: allow, deny, prompt

# =============================================================================
# Unified Gateway Configuration
# =============================================================================
ENABLE_CLOUDFLARE=false
# Set to true to enable Cloudflare Tunnel (requires cloudflared binary)

ENABLE_TAILSCALE=false
# Set to true to enable Tailscale VPN (requires tailscale binary)

ENABLE_DIRECT_HTTPS=false
# Set to true to enable direct HTTPS (requires SSL certificates)

# =============================================================================
# Search Configuration
# =============================================================================
SEARXNG_URL=http://searxng:8080

# =============================================================================
# API Keys (Optional - for specific integrations)
# =============================================================================
# OpenAI API Key (if using OpenAI models)
# OPENAI_API_KEY=sk-...

# Anthropic API Key (if using Claude models)
# ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini API Key
# GOOGLE_API_KEY=...

# =============================================================================
# Development/Debug Settings
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
